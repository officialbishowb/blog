---
export interface Props {
	tag: string
}
const { tag } = Astro.props
---

<a href={`/tags/${tag}`} aria-label={tag}>
	<span
		class='sub-background font-semibold text-white dark:sub-background dark:text-white shadow text-sm w-fit px-2 py-1 md:px-5 md:py-2 rounded-full'
	>
		{tag ?? 'Blog Tag'}
	</span>
</a>
